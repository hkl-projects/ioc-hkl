# FROM EPICS TO PYTHON

record(ao, "$(P)$(R)wavelength") {
    field(PINI, "YES")
    field(DTYP, "pydev")
    field(OUT, "@hkl_calc.wavelength='VAL'")
    info(autosaveFields, "VAL")
}

